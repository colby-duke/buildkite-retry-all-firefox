{
  "browser_specific_settings": { 
    "gecko": { 
      "id": "buildkite_retry-all@applied.co",
      "strict_min_version": "42.0"
    } 
  },
  "name": "Buildkite Retry-All",
  "version": "0.0.2",
  "description": "Retry all failed Buildkite jobs en masse for a build",
  "permissions": [
    "*://buildkite.com/*",
    "activeTab",
    "contextMenus"
  ],
  "icons": {
    "16": "icon.png"
  },
  "content_scripts": [
    {
      "css": ["css/style.css"],
      "js": ["js/retry.js"],
      "matches": ["https://buildkite.com/*"]
    }
  ],
  "background": {
    "scripts": ["js/jquery.js", "js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "manifest_version": 2
}
