{
  "name": "Buildkite Retry-All",
  "version": "0.0.1",
  "description": "Retry all failed buildkite tests on a page",
  "permissions": [
    "*://buildkite.com/*",
    "activeTab",
    "contextMenus",
    "declarativeContent"
  ],
  "icons": {
    "16": "applied_logo_16.png"
  },
  "content_scripts": [
    {
      "css": ["css/style.css"],
      "js": ["js/retry.js"],
      "matches": ["https://buildkite.com/*"]
    }
  ],
  "background": {
    "scripts": ["js/jquery.js", "js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "manifest_version": 2
}
